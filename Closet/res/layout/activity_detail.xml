<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/addView"
        android:layout_width="match_parent"
        android:layout_height="467dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/showImageClothes"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="30dp"
            android:src="@drawable/ic_launcher" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >

            <TableRow android:layout_width="wrap_content" >

                <TextView
                    android:id="@+id/showNameTextView"
                    android:text="옷 이름"
                    android:textSize="24dp"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/showNameEditText"
                    android:textSize="24dp"
                    android:padding="15dp"/>
			</TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/showCategoryTextView"
                    android:text="종류"
                    android:textSize="24dp"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/showCategorySpinner"
                    android:textSize="24dp"
                    android:padding="15dp"/>
			</TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/showBrandTextView"
                    android:text="브랜드"
                    android:textSize="24dp"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/showBrandEditText"
                    android:textSize="24dp"
                    android:padding="15dp"/>
			</TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/showWeatherTextView"
                    android:text="날씨"
                    android:textSize="24dp"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/showWeatherSpinner"
                    android:textSize="24dp"
                    android:padding="15dp"/>
			</TableRow>
        </TableLayout>
         
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <Button
	        android:id="@+id/deleteButton"
    	    android:layout_width="wrap_content"
       	 	android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DELETE" />

        <Button
            android:id="@+id/editbutton"
    	    android:layout_width="wrap_content"
       	 	android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EDIT" />
	</LinearLayout>
</LinearLayout>   